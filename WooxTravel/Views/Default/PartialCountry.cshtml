@model List<WooxTravel.Entities.Destination>

<div class="visit-country">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="section-heading">
                    <h2>Popüler Tur ve Seyehat Rotalarımız</h2>
                    <p>Dünyanın Dört Bir Noktasına Alanında Uzman Rehberler Eşliğinde Seyehata Çıkmaya Hazır Mısınız?</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="items">
                    <div class="row">
                        @foreach (var item in Model)
                        {

                            <div class="col-lg-12">
                                <div class="item">
                                    <div class="row">
                                        <div class="col-lg-4 col-sm-5">
                                            <div class="image">
                                                <img src="@item.ImageURL" alt="">
                                            </div>
                                        </div>
                                        <div class="col-lg-8 col-sm-7">
                                            <div class="right-content">
                                                <h4>@item.Country</h4>
                                                <span>@item.City</span>
                                                <div class="main-button">
                                                    <a href="/Default/TourDetails/@item.DestinationID">Tur Detayları</a>
                                                </div>
                                                <!-- Kısa açıklama -->
                                                <p id="short-description-@item.DestinationID">
                                                    @item.Description.Substring(0, item.Description.Substring(0,500).LastIndexOf(" "))...
                                                    <a href="javascript:void(0);" onclick="showFullDescription(@item.DestinationID)">Devamını gör...</a>
                                                </p>

                                                <!-- Tam açıklama (başlangıçta gizli) -->
                                                <p id="full-description-@item.DestinationID" style="display: none;">
                                                    @item.Description
                                                    <a href="javascript:void(0);" onclick="hideFullDescription(@item.DestinationID)">Kapat</a>
                                                </p>
                                                <ul class="info">
                                                    <li><i class="fa fa-user"></i> @item.DayNight Gün - @(item.DayNight-1) Gece</li>
                                                    <li><i class="fa fa-globe"></i> @item.Price₺</li>
                                                    <li><i class="fa fa-person"></i> @item.Capacity</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function showFullDescription(id) {
        // Kısa açıklamayı gizle, tam açıklamayı göster
        document.getElementById(`short-description-${id}`).style.display = 'none';
        document.getElementById(`full-description-${id}`).style.display = 'block';
    }

    function hideFullDescription(id) {
        // Tam açıklamayı gizle, kısa açıklamayı göster
        document.getElementById(`short-description-${id}`).style.display = 'block';
        document.getElementById(`full-description-${id}`).style.display = 'none';
    }
</script>
