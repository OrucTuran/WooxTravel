@model WooxTravel.Entities.Admin

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Admin Profil İşlemleri</div>
                    </div>
                    <div class="card-body">
                        <form method="post" action="/Admin/Destination/CreateDestination">
                            <div class="form-group">
                                <label>Adınız</label>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                <br>
                                <label>Soy Adınız</label>
                                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                                <br>
                                <label>Email Adresiniz</label>
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                <br>
                                <label>Kullanıcı Adınız</label>
                                @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                                <br>
                                <label>Şifreniz</label>
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                                <br>
                                <button class="btn btn-outline-info" style="border-radius:30px">Bilgilerini Güncelle</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>