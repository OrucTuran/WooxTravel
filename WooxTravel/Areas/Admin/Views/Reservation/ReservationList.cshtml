@model List<WooxTravel.Entities.Rezervation>


@{
    ViewBag.Title = "ReservationList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Rezervasyon İşlemleri</div>
                    </div>
                    <div class="card-body">
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ad Soyad</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Kişi Sayısı</th>
                                    <th scope="col">Rez. Tarihi</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.RezervationID</td>
                                        <td>@item.Name</td>
                                        <td><a href="mailto:@item.Email">@item.Email</a></td>
                                        <td><a href="tel:+9(@item.Phone)">@item.Phone</a></td>
                                        <td>@item.PersonCount</td>
                                        <td>@item.RezervationDate.ToString("dd/MM/yyyy")</td>
                                        <td><a href="/Reservation/DeleteReservation/@item.RezervationID" class="btn btn-outline-danger" style="border-radius:30px">Sil</a></td>
                                        <td><a href="/Reservation/UpdateReservation/@item.RezervationID" class="btn btn-outline-success" style="border-radius:30px">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>